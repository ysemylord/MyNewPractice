<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlankFragment1">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/init_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试GlobalAction"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/init_textView" />

    <Button
        android:id="@+id/btn_to_fragment2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to fragment2"
        app:layout_constraintStart_toStartOf="@+id/btn"
        app:layout_constraintTop_toBottomOf="@+id/btn" />

    <Button
        android:id="@+id/test_safe_args"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试 safe args"
        app:layout_constraintStart_toStartOf="@+id/btn_to_fragment2"
        app:layout_constraintTop_toBottomOf="@+id/btn_to_fragment2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/to_room"
        android:text="toRoom"
        app:layout_constraintStart_toStartOf="@+id/test_safe_args"
        app:layout_constraintTop_toBottomOf="@+id/test_safe_args" />
</androidx.constraintlayout.widget.ConstraintLayout>