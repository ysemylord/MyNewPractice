<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dialogdemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="31" />

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.SYSTEM_OVERLAY_WINDOW" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.MyApplication" >
        <activity
            android:name="com.example.dialogdemo.SoftWindowDemoActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.dialogdemo.ImmersiveDemoActivity"
            android:exported="true" />
        <activity
            android:name="com.example.dialogdemo.with_screen.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.App.Starting" />
        <activity
            android:name="com.example.dialogdemo.with_screen.WhiteScreenDisablePreviewActivity"
            android:exported="true" />
        <activity
            android:name="com.example.dialogdemo.with_screen.WhiteScreenWindowBackgroundMainActivity"
            android:exported="true"
            android:theme="@style/SplashTheme" />
        <activity
            android:name="com.example.dialogdemo.WindowManagerDemoActivity"
            android:exported="true" />
        <activity
            android:name="com.example.dialogdemo.DialogWindowActivity"
            android:exported="true" />
        <activity
            android:name="com.example.dialogdemo.SecondActivity"
            android:exported="true" />
        <activity
            android:name="com.example.dialogdemo.MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>